{
    "name": "s4mpp/laragenius",
    "description": "Resource generator for Laravel from DB tables",
    "autoload": {
        "psr-4": {
            "S4mpp\\Laragenius\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Samuel P.",
            "email": "s4mpp.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "orchestra/testbench": "^8.20",
        "nunomaduro/collision": "^7.8",
        "larastan/larastan": "^2.0",
        "laravel/pint": "^1.13"
    },
    "extra": {
        "laravel": {
            "providers": [
                "S4mpp\\Laragenius\\Providers\\LarageniusServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@php vendor/bin/testbench workbench:build --ansi",
            "@php vendor/bin/testbench workbench:create-sqlite-db",
            "@php vendor/bin/testbench migrate"
        ],
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ]
    }
}
